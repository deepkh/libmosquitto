SHELL=/bin/sh

	
BINMOSQUITTO: ${BINMOSQUITTO_BIN}
	@echo MAKE BINMOSQUITTO 

BINMOSQUITTO_CLEAN: ${BINMOSQUITTO_BIN_CLEAN}
	@echo MAKE BINMOSQUITTO_CLEAN 

# due to lib and src use same code directly, so need to clean lib before make src
${BINMOSQUITTO_BIN}:
	$(CD) ${BINMOSQUITTO} && $(MAKE) -f Makefile.${BINMOSQUITTO_NAME} $@

BINMOSQUITTO_DEV: 
	$(CD) ${BINMOSQUITTO} && $(MAKE) -f Makefile.${BINMOSQUITTO_NAME} -j8 ${BINMOSQUITTO_BIN}
	@echo MAKE $@ 

${BINMOSQUITTO_BIN_CLEAN}:
	$(CD) ${BINMOSQUITTO} && $(MAKE) -f Makefile.${BINMOSQUITTO_NAME} $@



BINMOSQUITTO_PASSWD: ${BINMOSQUITTO_PASSWD_BIN}
	@echo MAKE BINMOSQUITTO_PASSWD 

BINMOSQUITTO_PASSWD_CLEAN: ${BINMOSQUITTO_PASSWD_BIN_CLEAN}
	@echo MAKE BINMOSQUITTO_PASSWD_CLEAN 

${BINMOSQUITTO_PASSWD_BIN}:
	$(CD) ${BINMOSQUITTO_PASSWD} && $(MAKE) -f Makefile.${BINMOSQUITTO_PASSWD_NAME} -j8 $@

BINMOSQUITTO_PASSWD_DEV: 
	$(CD) ${BINMOSQUITTO_PASSWD} && $(MAKE) -f Makefile.${BINMOSQUITTO_PASSWD_NAME} -j8 ${BINMOSQUITTO_PASSWD_BIN}
	@echo MAKE $@ 

${BINMOSQUITTO_PASSWD_BIN_CLEAN}:
	$(CD) ${BINMOSQUITTO_PASSWD} && $(MAKE) -f Makefile.${BINMOSQUITTO_PASSWD_NAME} $@



